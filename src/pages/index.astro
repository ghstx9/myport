    <script>
        document.addEventListener('DOMContentLoaded', function() {

    const tabs = document.querySelectorAll('[data-tab]') as NodeListOf<HTMLElement>;
    const contents = {
        'about': document.getElementById('about-content') as HTMLElement | null,
        'projects': document.getElementById('projects-content') as HTMLElement | null,
        'readme': document.getElementById('readme-content') as HTMLElement | null
    };

    tabs.forEach(tab => {
        tab.addEventListener('click', (event) => {
            const clickedTab = event.currentTarget as HTMLElement;
            const targetTab = clickedTab.getAttribute('data-tab');

            tabs.forEach(t => t.classList.remove('tab-active'));
            

            clickedTab.classList.add('tab-active');
            
            Object.values(contents).forEach(content => {
                if (content) content.classList.add('hidden');
            });
            
            if (targetTab && contents[targetTab as keyof typeof contents]) {
                contents[targetTab as keyof typeof contents]?.classList.remove('hidden');
            }
        });
    });

    const mobileMenuBtn = document.getElementById('mobileMenuBtn') as HTMLElement | null;
    const mobileMenu = document.getElementById('mobileMenu') as HTMLElement | null;
    const mobileOverlay = document.getElementById('mobileOverlay') as HTMLElement | null;
    const menuIcon = document.getElementById('menuIcon') as HTMLElement | null;
    const closeIcon = document.getElementById('closeIcon') as HTMLElement | null;

    function toggleMobileMenu() {
        if (mobileMenu && mobileOverlay && menuIcon && closeIcon) {
            mobileMenu.classList.toggle('open');
            mobileOverlay.classList.toggle('hidden');
            menuIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
        }
    }

    if (mobileMenuBtn) {
        mobileMenuBtn.addEventListener('click', toggleMobileMenu);
    }
    
    if (mobileOverlay) {
        mobileOverlay.addEventListener('click', toggleMobileMenu);
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && mobileMenu?.classList.contains('open')) {
            toggleMobileMenu();
        }
    });
});
    </script>
