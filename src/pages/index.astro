---
import { 
  MapPin, 
  FileCode, 
  Folder, 
  BookOpen, 
  Github, 
  Twitter,
  Mail,
  Menu,
  X
} from '@lucide/astro';
import { Instagram } from 'simple-icons-astro';
import '../styles/global.css';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ricky's Space</title>
</head>

<body class="bg-gray-900 text-gray-100 min-h-screen overflow-x-hidden">
    <!-- Mobile Menu Button -->
    <button id="mobileMenuBtn" class="fixed top-4 left-4 z-50 p-2 bg-gray-800 rounded-lg border border-gray-700 md:hidden">
        <Menu id="menuIcon" class="w-5 h-5" />
        <X id="closeIcon" class="w-5 h-5 hidden" />
    </button>
    
    <!-- Mobile Overlay -->
    <div id="mobileOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden md:hidden"></div>
    
    <div class="flex flex-col md:flex-row min-h-screen">
        <!-- Left Panel - Profile (Mobile: Sidebar, Desktop: Fixed) -->
        <div id="mobileMenu" class="mobile-menu fixed md:relative inset-y-0 left-0 z-40 w-80 max-w-sm bg-gray-800 border-r border-gray-700 p-4 md:p-6 overflow-y-auto md:block">
            <div class="mb-4 md:mb-6">
                <div class="w-16 h-16 md:w-24 md:h-24 rounded-full border-2 border-red-500 mb-3 md:mb-4 overflow-hidden mx-auto md:mx-0">
                    <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='40' fill='%23374151'/%3E%3Ccircle cx='50' cy='35' r='12' fill='%23F3F4F6'/%3E%3Cpath d='M50 50c-8 0-15 5-18 12h36c-3-7-10-12-18-12z' fill='%23F3F4F6'/%3E%3Crect x='30' y='45' width='40' height='8' fill='%236B7280'/%3E%3C/svg%3E" 
                         alt="Profile" class="w-full h-full object-cover">
                </div>
                <h1 class="text-lg md:text-xl font-semibold mb-1 text-center md:text-left">Ricky Aldiansyah</h1>
                <p class="text-sm text-blue-400 mb-2 text-center md:text-left">Software Engineer</p>
                <div class="flex items-center justify-center md:justify-start text-sm text-gray-400">
                    <MapPin class="w-4 h-4 mr-1" />
                    Batam City, Indonesia
                </div>
            </div>
            
            <div class="mb-6 md:mb-8">
                <p class="text-xs md:text-sm text-gray-300 leading-relaxed text-center md:text-left">
                    Dedicated web developer creating clean, efficient, and scalable web apps with modern tools like Astro, React, and Tailwind, responsive interfaces is what I do best. 
                </p>
            </div>
            
            <!-- Terminal -->
            <div class="bg-gray-900 rounded-lg border border-gray-600 mb-4 md:mb-6">
                <div class="bg-gray-700 px-3 py-2 rounded-t-lg flex items-center">
                    <div class="flex space-x-1">
                        <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-red-500"></div>
                        <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-yellow-500"></div>
                        <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-green-500"></div>
                    </div>
                </div>
                <div class="p-2 md:p-3 text-xs md:text-sm">
                    <div class="text-green-400 mb-1">$ npx connect</div>
                    <div class="text-gray-400 mb-1">Initializing...</div>
                    <div class="text-gray-400 mb-1">Project Initialized!</div>
                    <div class="text-gray-400">Waiting for contact request<span class="terminal-cursor">_</span></div>
                </div>
            </div>
            
            <!-- Social Icons -->
            <div class="flex justify-center md:justify-start space-x-3 md:space-x-4">
                <a href="#" class="social-icon text-gray-400 hover:text-white">
                    <Github class="w-5 h-5 md:w-6 md:h-6" />
                </a>
                <a href="#" class="social-icon text-gray-400 hover:text-white">
                    <Twitter class="w-5 h-5 md:w-6 md:h-6" />
                </a>
                <a href="#" class="social-icon text-gray-400 hover:text-white">
                    <Instagram class="w-5 h-5 md:w-6 md:h-6" />
                </a>
                <a href="#" class="social-icon text-gray-400 hover:text-white">
                    <Mail class="w-5 h-5 md:w-6 md:h-6" />
                </a>
            </div>
        </div>
        
        <!-- Right Panel - Code Editor -->
        <div class="flex-1 bg-gray-900 md:ml-0">
            <!-- File Tabs -->
            <div class="bg-gray-800 border-b border-gray-700 flex overflow-x-auto">
                <div class="tab-active px-3 md:px-4 py-2 text-xs md:text-sm border-r border-gray-700 flex items-center whitespace-nowrap">
                    <FileCode class="w-3 h-3 md:w-4 md:h-4 mr-1 md:mr-2" />
                    about.ts
                </div>
                <div class="px-3 md:px-4 py-2 text-xs md:text-sm border-r border-gray-700 flex items-center text-gray-400 hover:text-white cursor-pointer whitespace-nowrap">
                    <Folder class="w-3 h-3 md:w-4 md:h-4 mr-1 md:mr-2" />
                    projects.md
                </div>
                <div class="px-3 md:px-4 py-2 text-xs md:text-sm border-r border-gray-700 flex items-center text-gray-400 hover:text-white cursor-pointer whitespace-nowrap">
                    <BookOpen class="w-3 h-3 md:w-4 md:h-4 mr-1 md:mr-2" />
                    README.md
                </div>
            </div>
            
            <div class="p-3 md:p-6 overflow-auto h-screen md:h-full">
                <div class="font-mono text-xs md:text-sm">
                    <div class="flex">
                        <span class="line-number">1</span>
                        <span><span class="syntax-keyword">interface</span> <span class="syntax-type">Developer</span> <span class="syntax-bracket">&#123;</span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">2</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">name</span>: <span class="syntax-type">string</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">3</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">skills</span>: <span class="syntax-type">string</span><span class="syntax-bracket">[]</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">4</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">interests</span>: <span class="syntax-type">string</span><span class="syntax-bracket">[]</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">5</span>
                        <span><span class="syntax-bracket">&#125;</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">6</span>
                        <span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">7</span>
                        <span><span class="syntax-keyword">interface</span> <span class="syntax-type">TechStack</span> <span class="syntax-bracket">&#123;</span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">8</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">devOps</span>: <span class="syntax-type">string</span><span class="syntax-bracket">[]</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">9</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">backend</span>: <span class="syntax-type">string</span><span class="syntax-bracket">[]</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">10</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">frontend</span>: <span class="syntax-type">string</span><span class="syntax-bracket">[]</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">11</span>
                        <span><span class="syntax-bracket">&#125;</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">12</span>
                        <span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">13</span>
                        <span><span class="syntax-keyword">type</span> <span class="syntax-type">ContactType</span> = <span class="syntax-string">'github'</span> | <span class="syntax-string">'twitter'</span> | <span class="syntax-string">'instagram'</span> | <span class="syntax-string">'email'</span>;</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">14</span>
                        <span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">15</span>
                        <span><span class="syntax-keyword">const</span> <span class="syntax-property">techStack</span>: <span class="syntax-type">TechStack</span> = <span class="syntax-bracket">&#123;</span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">16</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">devOps</span>: <span class="syntax-bracket">[</span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">17</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'GitHub'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">18</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'Git'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">19</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'Cloudflare'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">20</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-bracket">]</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">21</span>
                        <span class="ml-2 md:ml-4"><span class="syntax-property">frontend</span>: <span class="syntax-bracket">[</span></span>
                    </div>
                    <div class="flex">
                        <span class="line-number">22</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'HTML'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">23</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'CSS'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">24</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'JavaScript'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">25</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'TypeScript'</span>,</span>
                    </div>
                    <div class="flex">
                        <span class="line-number">26</span>
                        <span class="ml-4 md:ml-8"><span class="syntax-string">'React'</span>,</span>
                    </div>
                    
                    <!-- Footer -->
                    <div class="mt-6 md:mt-8 pt-4 border-t border-gray-700">
                        <div class="text-center text-xs md:text-sm text-gray-400">
                            Built with <span class="text-orange-500 font-semibold">Astro</span> by <span class="text-blue-400">devi|dev|io</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('[class*="px-"]');
            tabs.forEach(tab => {
                if (tab.classList.contains('py-2')) {
                    tab.addEventListener('click', function() {
                        tabs.forEach(t => {
                            if (t.classList.contains('py-2')) {
                                t.classList.remove('tab-active');
                            }
                        });
                        this.classList.add('tab-active');
                    });
                }
            });

            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileOverlay = document.getElementById('mobileOverlay');
            const menuIcon = document.getElementById('menuIcon');
            const closeIcon = document.getElementById('closeIcon');

            function toggleMobileMenu() {
                mobileMenu.classList.toggle('open');
                mobileOverlay.classList.toggle('hidden');
                menuIcon.classList.toggle('hidden');
                closeIcon.classList.toggle('hidden');
            }

            mobileMenuBtn.addEventListener('click', toggleMobileMenu);
            mobileOverlay.addEventListener('click', toggleMobileMenu);

            // Close mobile menu on escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && mobileMenu.classList.contains('open')) {
                    toggleMobileMenu();
                }
            });
        });
    </script>
</body>
</html>